<div class="container">
  <div class="card-product">

    <% if @cocktail.photo.attached? %>
      <% @path = @cocktail.photo.key %>
    <% else %>
      <% @path = "a-cup-filled-of-green-tea-with-lemon-3677150_lftutq" %>
    <% end %>

    <%= cl_image_tag @path, height: 400, width: 400, crop: :fill %>

    <div class="card-product-infos">
      <h1><%= @cocktail.name %></h1>
      <div class="d-flex justify-content-between">
        <% @cocktail.doses.each do |dose| %>
          <div class="list-item text-left">
            <p><%= dose.description %> | <%= dose.ingredient.name %></p>
            <button id="sweet-alert-demo" class="btn btn-sm btn-light">Delete</button>
            <%= link_to "", dose_path(dose), method: :delete, class: 'hidden', id: "delete-link" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-product-actions">
    <%= link_to "Back", cocktails_path, class: 'btn btn-primary' %>
    <%= link_to "Add a New Dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
    <button id="sweet-alert-demo" class="btn btn-primary">Delete Cocktail</button>
    <%= link_to "", cocktail_path(@cocktail), method: :delete, class: 'hidden', id: "delete-link"%>
  </div>
</div>
